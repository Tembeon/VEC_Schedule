<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">30dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">55dp</item><!-- item size in menu-->
    </style>



    <style name="MyAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#303030</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="colorAccent">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="android:colorButtonNormal">#000</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:layout_marginLeft">20dp</item>
    </style>

</resources>